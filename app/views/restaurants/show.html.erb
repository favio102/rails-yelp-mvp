<div class="container">
  <p style="color: green"><%= notice %></p>

  <%= render @restaurant %>

<p><strong>Reviews</strong></p>
<p> <%= link_to "Add new review", new_restaurant_review_path(@restaurant) %> </p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"> User review: <%= review.content %></li>
    <li class="list-group-item"> Rating: <%= "⭐️" * review.rating %></li>
    <li class="list-group-item"> <%= link_to "Delete",
    review_path(review),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %> </li>
  <% end %>

</ul>
<hr>

  <div>
    <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %> |
    <%= link_to "Back to restaurants", restaurants_path %>

    <%= button_to "Destroy this restaurant", @restaurant, method: :delete %>
  </div>
</div>
